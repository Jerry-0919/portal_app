@using diga.web.Helpers;
@inject diga.dal.Services.ICultureService CultureHelper
@using Microsoft.AspNetCore.Http;
@using diga.dal; 
@inject DigaContext Db
@{
    ViewData["Title"] = CultureHelper.GetTranslation("contacts", Context.Session.GetString("SiteLanguage"));
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    a {
        color: #000;
    }

        a:link {
            text-decoration: none;
        }
</style>
<section class="mobile-margin-banner banner">
    <div class="container-fluid">
        <div class="container pb-2 pb-sm-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../home/index"> @CultureHelper.GetTranslation("homepage", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@CultureHelper.GetTranslation("contacts", Context.Session.GetString("SiteLanguage"))</li>
                </ol>
            </nav>
            <h1 class="h1-title my-5">
                @CultureHelper.GetTranslation("contacts", Context.Session.GetString("SiteLanguage"))
            </h1>
            <p class="text-white text-center font-weight-bold lh-1-5 mb-5 w-75 mx-auto">@CultureHelper.GetTranslation("feel_free_to_contact", Context.Session.GetString("SiteLanguage"))</p>
        </div>
    </div>
</section>
<section class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3112.0870814157843!2d-9.124551184311896!3d38.7387638795955!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd1933c092136ed9%3A0x9949828c16cb63c3!2sR.%20Prof.%20Mira%20Fernandes%2020%2021%20r%2Fc%20loja%2C%201900-381%20Lisboa!5e0!3m2!1sen!2spt!4v1593169506155!5m2!1sen!2spt" frameborder="0" style="border:0; width: 100%; height: 320px;" allowfullscreen></iframe>
        </div>
        <div class="row text-center">
            <div class="col-12 col-md-4 pt-4 bg-light">
                <span class="icon icon-phone fs-40"></span>
                <a href="tel:@CultureHelper.GetTranslation("phone_number", Context.Session.GetString("SiteLanguage"))">
                    <p class="d-lg-block d-xl-block">
                        @CultureHelper.GetTranslation("phone_number", Context.Session.GetString("SiteLanguage"))
                    </p>
                </a>
            </div>
            <div class="col-12 col-md-4 pt-4 bg-light">
                <span class="icon icon-map-marker fs-40"></span>
                <p class="d-lg-block d-xl-block">@Html.Raw(CultureHelper.GetTranslation("address", Context.Session.GetString("SiteLanguage")))</p>
            </div>
            <div class="col-12 col-md-4 pt-4 bg-light">
                <span class="icon icon-envelope fs-40"></span>
                <a href="mailto:geral@diga.pt">
                    <p class="d-lg-block d-xl-block">geral@diga.pt</p>
                </a>
            </div>
        </div>
    </div>
</section>
