        </div>
        <div class="w-88">
            <div class="mb-4">@CultureHelper.GetTranslation("create_accounts_for_employees", Context.Session.GetString("SiteLanguage"))</div>
            <div>@CultureHelper.GetTranslation("master_remote_goal_setting", Context.Session.GetString("SiteLanguage"))</div>
        </div>
    </div>
</section>
<section class="bg-white py-5 my-5">
    <div class="container">
        <div class="div-title w-75">@CultureHelper.GetTranslation("with_diga_hr_you_can_solve_problems", Context.Session.GetString("SiteLanguage"))</div>
        <div class="row hr-list">
            <div class="col-md-6 col-sm-12">
                <div class="font-weight-bold w-88">
                    <ul>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("sharing_access_to_info_flexible_access", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("guarantee_the_protection_and_processing", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("significantly_reduce_the_amount", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("form_a_talent_pool", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("create_technological_and_target_groups_of_personnel", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("access_the_effectiveness", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("organize_operational_scheduling_of_tasks", Context.Session.GetString("SiteLanguage")))</div></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="font-weight-bold w-88">
                    <ul>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("engage_new_employees", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("expand_your_business_with_automated_tasks", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("effectively_deal_with_the_requests", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("manage_personnel_contractors", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("collect_and_structure_metrics", Context.Session.GetString("SiteLanguage")))</div><hr /></li>
                        <li><div>@Html.Raw(CultureHelper.GetTranslation("coordinate_the_work_schedule", Context.Session.GetString("SiteLanguage")))</div></li>
                    </ul>
                </div>
            </div>
        </div>
