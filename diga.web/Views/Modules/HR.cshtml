<section class="bg-white py-5 my-5">
    <div class="container">
        <div class="div-title w-75">@CultureHelper.GetTranslation("employee_card_includes", Context.Session.GetString("SiteLanguage"))</div>
        <div class="vl">
            <div class="row">
                <div class="col-md-5 col-lg-4 col-12">
                    <div class="vl-mobile-items ml-5">
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("contracts", Context.Session.GetString("SiteLanguage"))</button>
