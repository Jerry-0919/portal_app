</section>
<section class="bg-light-blue py-5">
    <div class="container">
        <div class="row my-5">
            <div class="col-md-6">
                <div class="div-title">@CultureHelper.GetTranslation("hr_manager", Context.Session.GetString("SiteLanguage"))</div>
                @CultureHelper.GetTranslation("hr_manager_can_send_letters", Context.Session.GetString("SiteLanguage"))
