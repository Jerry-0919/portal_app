@using diga.web.Helpers;
@inject diga.dal.Services.ICultureService CultureHelper
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = CultureHelper.GetTranslation("diga_dashboard", Context.Session.GetString("SiteLanguage"));
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner mobile-margin-banner">
    <div class="container-fluid">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../home/index"> @CultureHelper.GetTranslation("homepage", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item"><a href="../modules/index"> @CultureHelper.GetTranslation("modules", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@CultureHelper.GetTranslation("diga_dashboard", Context.Session.GetString("SiteLanguage"))</li>
                </ol>
            </nav>
            <div class="row align-items-center py-5">
                <div class="col-md-6 col-sm-12">
                    <h1 class="h1-diga mb-5">@CultureHelper.GetTranslation("diga_dashboard", Context.Session.GetString("SiteLanguage"))</h1>
                    <div class="w-88">
                        <p class="text-white font-weight-bold lh-1-5-mobile mb-5">@CultureHelper.GetTranslation("diga_dashboard_is_a_module", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 m-auto text-center">
                    <img src="~/Assets/modules/dashboard_diga.png" class="img-fluid" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-white py-5 my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="vl ml-0">
                    <div class="vl-mobile-items ml-5">
                        <p>@CultureHelper.GetTranslation("a_common_problem_in_customer", Context.Session.GetString("SiteLanguage"))</p>
                        <p class="mb-0">@CultureHelper.GetTranslation("we_will_explain_what_dashboards_are", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-grey py-5">
    <div class="container">
        <div class="div-title w-75">@CultureHelper.GetTranslation("what_is_a_dashboard", Context.Session.GetString("SiteLanguage"))</div>
        <div class="w-88">@Html.Raw(CultureHelper.GetTranslation("dashboards_display_metrics_html", Context.Session.GetString("SiteLanguage")))</div>
    </div>
</section>
<section class="bg-grey">
    <div class="container">
        <div class="bg-blue px-5 py-4 p-lg-5">
            @Html.Raw(CultureHelper.GetTranslation("the_purpose_of_dashboards", Context.Session.GetString("SiteLanguage")))
        </div>
    </div>
</section>
<section class="bg-grey py-5">
    <div class="container">
        <div>@Html.Raw(CultureHelper.GetTranslation("once_youve_identified_the_tracking_html", Context.Session.GetString("SiteLanguage")))</div>
    </div>
</section>
<section class="bg-grey pb-5">
    <div class="container">
        <div class="bg-light-blue px-5 py-4 p-lg-5">
            <div class="w-88 font-weight-bold fs-24">@CultureHelper.GetTranslation("we_are_working_more_with_ux", Context.Session.GetString("SiteLanguage"))</div>
        </div>
    </div>
</section>
<partial name="~/Views/Shared/ConnectDigaCRM.cshtml" />
