        <div class="div-title">@CultureHelper.GetTranslation("what_capabilities_should_a_crm_have", Context.Session.GetString("SiteLanguage"))</div>
        <p class="my-5">@CultureHelper.GetTranslation("over_time_developers", Context.Session.GetString("SiteLanguage"))</p>

        <h4 class="font-weight-bold my-5">@CultureHelper.GetTranslation("list_of_required_modules_for_crm", Context.Session.GetString("SiteLanguage"))</h4>
        <div class="row">
            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/uchet.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("customer_accounting", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("history_of_communication_with_clients_is_stored_here", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/upravlenie.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("sales_mgmt_with_funnels", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("allows_you_to_control_the_deal", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/integracia.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("integration_with_sales_channels", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("all_requests_are_recorded", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/avtomatisacia.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("sales_automation", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("allows_you_to_automatically_set_tasks_for_specialists", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/analitica.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("analytics", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("allows_you_to_generate_online_reports", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block text-center bg-white">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/Assets/images/upravlenie.svg" />
                        </div>
                    </div>
                    <div class="media-body mt-3">
                        <h5 class="font-weight-bold">@CultureHelper.GetTranslation("task_mgmt", Context.Session.GetString("SiteLanguage"))</h5>
                        <p class="py-4 m-auto lh-1-5">@CultureHelper.GetTranslation("if_a_task_is_overdue", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="azul-textblock my-5">
    <div class="container-fluid">
        <div class="container">
            <div class="div-title w-75"> @CultureHelper.GetTranslation("conclusion_why_crm_is_so_necessary", Context.Session.GetString("SiteLanguage"))</div>
            <div class="w-88"> @Html.Raw(CultureHelper.GetTranslation("conclusion_why_crm_is_so_necessary_html", Context.Session.GetString("SiteLanguage")))</div>
        </div>
    </div>
</section>
