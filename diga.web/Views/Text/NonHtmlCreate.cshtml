@using diga.bl.Models; using diga.dal;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">NonHtml Texts</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Create</h6>
</div>
<div class="card-body">
    <form asp-action="Post" asp-controller="Text" asp-anti-forgery="true" >
        <input type="hidden" name="IsHtml" value="false" />
      <div class="form-group">
        <label>TextId</label>
        <input type="text" class="form-control" placeholder="Enter textId" name="TextId">
      </div>
      <div class="form-group">
        <label>En</label>
        <textarea type="text" class="form-control" name="En"></textarea>
      </div>
      <div class="form-group">
        <label>Ru</label>
        <textarea type="text" class="form-control" name="Ru"></textarea>
      </div>
      <div class="form-group">
        <label>Pt</label>
        <textarea type="text" class="form-control" name="Pt"></textarea>
      </div>
      <div class="form-group">
        <label>Es</label>
        <textarea type="text" class="form-control" name="Es"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
</div>

