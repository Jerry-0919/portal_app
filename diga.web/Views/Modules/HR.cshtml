@using diga.web.Helpers;
@inject diga.dal.Services.ICultureService CultureHelper
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = CultureHelper.GetTranslation("hr", Context.Session.GetString("SiteLanguage"));
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner mobile-margin-banner">
    <div class="container-fluid">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../home/index"> @CultureHelper.GetTranslation("homepage", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item"><a href="../modules/index"> @CultureHelper.GetTranslation("modules", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@CultureHelper.GetTranslation("hr", Context.Session.GetString("SiteLanguage"))</li>
                </ol>
            </nav>
            <div class="row py-5 align-items-center">
                <div class="col-md-6 col-sm-12">
                    <h1 class="h1-diga mb-5">
                        @CultureHelper.GetTranslation("hr_human_resources", Context.Session.GetString("SiteLanguage"))
                        <br />
                        (@CultureHelper.GetTranslation("hr", Context.Session.GetString("SiteLanguage")))
                    </h1>
                    <div class="w-88">
                        <p class="text-white font-weight-bold lh-1-5-mobile mb-5">@CultureHelper.GetTranslation("diga_hr_will_help", Context.Session.GetString("SiteLanguage"))</p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 m-auto text-center">
                    <img src="~/Assets/modules/hr_diga.png">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-white py-5 my-5">
    <div class="container">
        <div class="div-title w-75">@CultureHelper.GetTranslation("perform_admin_tasks_quickly_and_easily", Context.Session.GetString("SiteLanguage"))</div>
        <div class="w-88">@Html.Raw(CultureHelper.GetTranslation("manage_tasks_html", Context.Session.GetString("SiteLanguage")))</div>
    </div>
</section>
<section class="my-5">
    <div class="container">
        <div class="bg-light-blue px-5 py-4 p-lg-5">
            <div class="font-weight-bold fs-24">@CultureHelper.GetTranslation("hr_module_will_help", Context.Session.GetString("SiteLanguage"))</div>
        </div>
    </div>
</section>
<section class="grey-imgblock py-5">
    <div class="container-fluid">
        <div class="container text-center">
            <img src="@CultureHelper.GetTranslation("hr_screen.png", Context.Session.GetString("SiteLanguage"))" />
        </div>
    </div>
</section>
<section class="bg-blue py-5 my-5">
    <div class="container">
        <div class="div-title w-75">@CultureHelper.GetTranslation("optimize_every_aspect_of_job_with_diga_hr", Context.Session.GetString("SiteLanguage"))</div>
        <div class="vl my-5">
            <div class="vl-mobile-items lh-1-5 ml-4">
                <p>@CultureHelper.GetTranslation("1_improve_the_hiring_process", Context.Session.GetString("SiteLanguage"))</p>
                <p>@CultureHelper.GetTranslation("2_attract_and_hire_the_best_professionals", Context.Session.GetString("SiteLanguage"))</p>
                <p>@CultureHelper.GetTranslation("3_facilitate_the_search_for_reliable_performers", Context.Session.GetString("SiteLanguage"))</p>
                <p>@CultureHelper.GetTranslation("4_train_and_test_remotely", Context.Session.GetString("SiteLanguage"))</p>
                <p>@CultureHelper.GetTranslation("5_control_the_work_of_personnel", Context.Session.GetString("SiteLanguage"))</p>
