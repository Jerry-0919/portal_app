                        <button class="btn_azul_4">@CultureHelper.GetTranslation("3_department_or_company", Context.Session.GetString("SiteLanguage"))</button>
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("4_access_settings", Context.Session.GetString("SiteLanguage"))</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center"> <img class="w-88" src="~/Assets/images/dostyp.png" /></div>
        </div>
    </div>
</section>
<section class="bg-grey my-5 py-5">
    <div class="container my-5">
        <div class="div-title">@CultureHelper.GetTranslation("scopes_of_service_statuses", Context.Session.GetString("SiteLanguage"))</div>
