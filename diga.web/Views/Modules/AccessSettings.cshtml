@using diga.web.Helpers;
@inject diga.dal.Services.ICultureService CultureHelper
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = CultureHelper.GetTranslation("access_settings", Context.Session.GetString("SiteLanguage"));
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="mobile-margin-banner banner">
    <div class="container-fluid">
        <div class="container pb-2 pb-sm-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../home/index"> @CultureHelper.GetTranslation("homepage", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item"><a href="../modules/index"> @CultureHelper.GetTranslation("modules", Context.Session.GetString("SiteLanguage"))</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@CultureHelper.GetTranslation("access_settings", Context.Session.GetString("SiteLanguage"))</li>
                </ol>
            </nav>
            <h1 class="h1-title">
                @CultureHelper.GetTranslation("access_settings", Context.Session.GetString("SiteLanguage"))
            </h1>
        </div>
    </div>
</section>
<section class="bg-white my-5 py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="div-title">@CultureHelper.GetTranslation("user_groups", Context.Session.GetString("SiteLanguage"))</div>
                <div class="w-88">
                    @CultureHelper.GetTranslation("access_settings_1", Context.Session.GetString("SiteLanguage"))
