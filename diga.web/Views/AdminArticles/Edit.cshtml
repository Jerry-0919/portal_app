            </div>
            <div class="form-group">
                <label asp-for="TitleTextId" class="control-label"></label>
                <select asp-for="TitleTextId" class="form-control" asp-items="ViewBag.TitleTextId"></select>
                <span asp-validation-for="TitleTextId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enabled" class="control-label"></label>
                <input asp-for="Enabled" class="form-control" />
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
