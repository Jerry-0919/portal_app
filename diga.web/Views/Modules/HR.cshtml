<section class="py-5 banner-min">
    <div class="container">
        <div class="row my-5">
            <div class="col-md-11 text-center m-auto">
                <div class="text-white fs-40">@CultureHelper.GetTranslation("are_you_ready", Context.Session.GetString("SiteLanguage"))</div>
                <div class="div-title text-white my-5">@CultureHelper.GetTranslation("start_optimizing", Context.Session.GetString("SiteLanguage"))</div>
                <p class="text-white font-weight-bold fs-23 w-50 pb-5 m-auto">@CultureHelper.GetTranslation("join_1000s_of_companies", Context.Session.GetString("SiteLanguage"))</p>
                <button id="hrBtn" href="#" class="btn_rosa" data-toggle="modal" data-target="#CallModal">@CultureHelper.GetTranslation("get_started", Context.Session.GetString("SiteLanguage"))</button>
            </div>
        </div>
    </div>
</section>
<section class="py-5">
