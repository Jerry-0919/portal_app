@section Scripts{
    <script type="text/javascript">
        var json = '[{"id":1, "text":"1_customer_contacts", "description": "it_is_very_easy_to_create_card_for_indie_legal", "pictureUrl": "crm_screen.png", "url": ""},{"id":2,"text":"services", "description": "it_is_very_easy_to_create_card_for_indie_legal", "pictureUrl": "2_services_rus.jpg", "url": "/functions/services"},{"id":3, "text":"tasks", "description": "it_is_very_easy_to_create_card_for_indie_legal", "pictureUrl": "3_tasks_rus.jpg", "url": "/functions/tasks"}, {"id":4, "text":"history", "description": "it_is_very_easy_to_create_card_for_indie_legal", "pictureUrl": "4_history_rus.jpg", "url": "/functions/history"}]';
        var modules = JSON.parse(json);
        var modal = $("#imgModal");

        $("#moduleImg").click(function () {
            modal.show();
        });


        $("#closeImg").click(function () {
            modal.hide();
        });

        function loadModule(moduleId) {
            $('#btn' + moduleId).toggleClass('active');

            $.each(modules, function (index, value) {
                if (value.id === moduleId) {
                    $.get("/api/translation/get?textId=" + value.description, function (data, status) {
                        $("#moduleText").text(data);
                    });
                    $.get("/api/translation/get?textId=" + value.pictureUrl, function (data, status) {
                        $("#moduleImg").attr("src", data);
                        $("#moduleImgBig").attr("src", data);
                    });

                    if (moduleId !== 1) {
                        $.get("/api/translation/get?textId=read_more_about", function (data, status) {
                            $.get("/api/translation/get?textId=" + value.text, function (dataIn, status) {
                                $("#moduleUrl").text(data + '"' + dataIn + '"');
                            });
                        });
                        $("#moduleUrl").attr("href", value.url);
                    }
                    else {
                        $("#moduleUrl").text("");
                    }
                }
                else {
                    $('#btn' + value.id).removeClass('active');
                }

            });
            if (moduleId === 5) {
                $("#crmNotice").show();
            } else {
                $("#crmNotice").hide();
            }
        }

        $(document).ready(function () {

            loadModule(1);
        });


    </script>
}