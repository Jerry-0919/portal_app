                    @CultureHelper.GetTranslation("access_settings_2", Context.Session.GetString("SiteLanguage"))
                </div>
                <div class="div-title mt-5">@CultureHelper.GetTranslation("flexible_settings", Context.Session.GetString("SiteLanguage")):</div>
                <div class="vl">
                    <div class="font-weight-bold w-75 vl-mobile-items ml-4">
