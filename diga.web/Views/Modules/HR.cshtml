        <div class="container-fluid">
            <div class="container">
                <div class="div-title"> @CultureHelper.GetTranslation("module_value", Context.Session.GetString("SiteLanguage"))</div>
                <div class="font-weight-bold w-75">
                    @CultureHelper.GetTranslation("with_various_workloads_on_hr", Context.Session.GetString("SiteLanguage"))
