@model IEnumerable<diga.web.Models.TeamMembers>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileIcon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileIcon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryText.TextId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentText.TextId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameText.TextId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionText.TextId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
