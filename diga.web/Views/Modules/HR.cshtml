                    </div>
                </div>

                <div class="col-md-7 col-lg-5 col-12">
                    <div class="vl-mobile-items ml-4">
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("emergency_contact", Context.Session.GetString("SiteLanguage"))</button>
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("work_info_payment", Context.Session.GetString("SiteLanguage"))</button>
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("labor_responsibilities", Context.Session.GetString("SiteLanguage"))</button>
                        <button class="btn_azul_4">@CultureHelper.GetTranslation("cv", Context.Session.GetString("SiteLanguage"))</button>
