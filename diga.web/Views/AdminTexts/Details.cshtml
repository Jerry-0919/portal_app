@model diga.bl.Models.Texts

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Texts</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.En)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.En)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ru)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ru)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Es)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Es)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsHtml)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsHtml)
        </dd>
    </dl>
</div>
<div>
    @if (@Model.IsHtml == true)
    {
        <a asp-action="Edit" asp-route-id="@Model.TextId">Edit</a>
    }
    else
    {
        <a asp-action="EditNonHtml" asp-route-id="@Model.TextId">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
